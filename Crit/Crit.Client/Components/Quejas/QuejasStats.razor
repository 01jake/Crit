<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-0 small">Pendientes</p>
                        <h4 class="fw-bold text-warning mb-0">@PendingCount</h4>
                        <small class="text-muted">Quejas por revisar</small>
                    </div>
                    <div class="bg-warning bg-opacity-10 rounded p-3">
                        <i class="bi bi-clock text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-0 small">En Proceso</p>
                        <h4 class="fw-bold text-primary mb-0">@InProgressCount</h4>
                        <small class="text-muted">Quejas en progreso</small>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded p-3">
                        <i class="bi bi-arrow-repeat text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-0 small">Resueltas</p>
                        <h4 class="fw-bold text-success mb-0">@ResolvedCount</h4>
                        <small class="text-muted">Quejas completadas</small>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded p-3">
                        <i class="bi bi-check-circle text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int PendingCount { get; set; }
    [Parameter] public int InProgressCount { get; set; }
    [Parameter] public int ResolvedCount { get; set; }
}