@inherits LayoutComponentBase
@implements IDisposable
@inject IJSRuntime JSRuntime

<div class="page">
    <div class="main-container @(sidebarExpanded ? "sidebar-expanded" : "sidebar-collapsed")">
        <div class="sidebar">
            <NavMenu @ref="navMenuRef" OnSidebarToggle="HandleSidebarToggle" />
        </div>
        <main class="main-content">
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private NavMenu navMenuRef;
    private bool sidebarExpanded = false;

    private void HandleSidebarToggle(bool expanded)
    {
        sidebarExpanded = expanded;
        StateHasChanged();
    }

    public void Dispose()
    {
    }
}